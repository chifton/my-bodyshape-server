@using Microsoft.AspNet.Identity
@using MyBodyShape.Languages
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <span class="menu_droit_item">
        @Html.ActionLink("Welcome " + User.Identity.GetUserName().Split('@')[0], "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
    </span>
    <span class="menu_droit_item">
        <a href="javascript:document.getElementById('logoutForm').submit()">Log out</a>
    </span>
    }
}
else
{
    <span class="menu_droit_item">
        <span id="feedback">@Resources.Res_FeedBack</span>
    </span>
    <span class="menu_droit_item">
        <span id="privacypolicies">@Resources.Res_PrivacyPolicies</span>
    </span>
    <span class="menu_droit_item">
        @Html.ActionLink(Resources.Res_Register, "Register", "Account", routeValues: null, htmlAttributes: null)
    </span>
    <span class="menu_droit_item">
        @Html.ActionLink(Resources.Res_Login, "Login", "Account", routeValues: null, htmlAttributes: null)
    </span>
}
