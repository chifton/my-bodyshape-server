<!DOCTYPE html>
<html class="bodyshapeloader">
<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-glowing.js"></script>
    <script src="~/Scripts/jquery.alerts.js"></script>
    <script type="text/javascript">

        document.addEventListener("DOMContentLoaded", function () {
            $.ajax({
                type: "GET",
                url: "/Home/GetSimulationsNumber",
                success: function (data) {
                    if (data > 0) {

                        // Display
                        $("#nbSimulations").html("Already <span class='nbSimul'>" + data + "</span> bodyshape simulations !!!")

                        // Glowing
                        $('.nbSimul').addGlow({
                            radius: 40,
                            textColor: '#008000',
                            haloColor: '#008000',
                            duration: 400
                        });
                    }
                    else
                    {
                        $("#nbSimulations").remove();
                        $("#nbSimulationsBr").remove();
                    }
                }
            });

            $("#feedback").click(function () {
                var response = jPrompt("Give us your comments (please specify your name) :", '', 'Feedback !', function (r) {
                    if (r) {
                        $.ajax({
                            type: "POST",
                            url: "/Home/FeedBack?mailContent=" + r,
                            success: function () {
                                alert("Your feedback has been successfully sent !");
                                location.reload();
                            }
                        });
                    }
                });
            });
        });
        
    </script>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyBodyShape - Generate your 3D bodyshape with member weights from your pictures</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div id="titre_centre">
                <a href="@Href("~/Home/Index")"><img style="display:inline-block;" src="~/Images/myshapebody.png" width="500" /></a>
        </div>
        <div class="menu_droit">
            @Html.Partial("_LoginPartial")
        </div>
            <br />
</header>
        @RenderBody()
    <br/><br/><br /><br /><br /><br />
    <footer style="display:block;">
        <span id="nbSimulations"></span>
        <br id="nbSimulationsBr" />
        &copy; @DateTime.Now.Year - MyBodyShape 1.0 - Developed by François & Chérif
        <br />Available on <a target="_blank" style="text-decoration: none;" href="https://play.google.com/store"><span class="platformText">Android </span><img style="display:inline;" src="~/Images/android.png" width="20" height="20" /></a> - Soon available on <a target="_blank" style="text-decoration: none;" href="https://itunes.apple.com/fr/genre/ios-forme-et-sant%C3%A9"><span class="platformText">iOS </span><img style="display:inline;" src="~/Images/ios.png" width="20" height="20" /></a>
    </footer>
    
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>